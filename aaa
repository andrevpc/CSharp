using System;

Pessoa pessoa = new Pessoa(18, "Andr√©");
pessoa.ExibirDados();
OrdenarPessoas.Adicionar(pessoa);
Pessoa pessoa1 = new Pessoa(19, "Iago");
OrdenarPessoas.Adicionar(pessoa1);
Pessoa pessoa2 = new Pessoa(17, "Lucas");
OrdenarPessoas.Adicionar(pessoa2);
foreach(var i in OrdenarPessoas.pessoas)
    Console.WriteLine(i.Nome);

OrdenarPessoas.Maior();

public class Pessoa
{
    public int Idade { get; set; }
    public string Nome  { get; set; }

    public Pessoa(int ida, string nome)
    {
        this.Idade = ida;
        this.Nome = nome;
    }
    public virtual void ExibirDados()
    {
        Console.WriteLine(this.Idade);
        Console.WriteLine(this.Nome);
    }
}

public static class OrdenarPessoas
{
    public static List<Pessoa> pessoas = new List<Pessoa>();
    public static Pessoa MaisVelho = new Pessoa(0, "");
    public static void Adicionar(Pessoa pes)
    {
        pessoas.Add(pes);
    }
    public static void Maior()
    {
        foreach (var p in pessoas)
        {
            if (p.Idade >= MaisVelho.Idade)
                MaisVelho = p;
        }
        Console.WriteLine(MaisVelho.Nome);
    }
}
